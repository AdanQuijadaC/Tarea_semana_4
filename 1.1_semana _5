package Tareas_IACC;

/**
 * Tarea semana 5_IACC Estudiante: Adan Quijada Contreras
 *
 */
public class Empleado {

//---------- Atributos ----------
    private String nombre;
    private String apellido;
    private double sueldo;
    private int edad;

// --------- Metodo Main ------------
    public static void main(String[] args) {
        Empleado ejemplo1 = new Empleado("Adan", "Quijada", 1200, 29);

        System.out.print(ejemplo1.devuelveNombre(ejemplo1.nombre)+"\n \n");
        System.out.print(ejemplo1.devuelveSueldoLiquido(ejemplo1.nombre));
    }

//---------- Constructor -----------
    public Empleado(String nombre, String apellido, double sueldo, int edad) {
        this.nombre = nombre;
        this.apellido = apellido;
        this.sueldo = sueldo;
        this.edad = edad;
    }

//----------- Metodos --------------
    public String devuelveNombre(String nombre) {

        return "El nombre del empleado es: " + nombre + "\nEl apellido es: " + apellido;
    }

    public String devuelveSueldoLiquido(String nombre) {
        nombre = nombre;
        apellido = apellido;
        sueldo = sueldo;
        String v = "Pesos";
        double nuevoSueldo = this.sueldo * 0.9;

        return "El sueldo del empleado " + nombre + " " + apellido + " es de: " + sueldo+" "+v+"\nY su sueldo liquido"
                + " es de : "+nuevoSueldo+" "+v+"\n";
    }
}
